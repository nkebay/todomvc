<c:template 
    name="task"
    xmlns:c="core" 
    params="rowId,title,checked">

    <li id="row_$rowId" rowId="$rowId" class="{?checked;completed}">
        <div class="view">
            <input class="toggle" type="checkbox" checked="{?checked;checked}" />
            <label data-title="title">$title</label>
            <button class="destroy" data-destroy="close"></button>
        </div>
        <input class="edit" value="$title" data-edit="edit" />
    </li>
    
</c:template>